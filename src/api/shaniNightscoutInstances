import axios from 'axios';

const nightscoutApiKey = 'your_api_key'; // Replace with your actual API key

export const nightscoutInstance = axios.create({
  baseURL: 'https://shani-cgm.herokuapp.com',
  timeout: 5000, // 5 seconds
  headers: {
    'Content-Type': 'application/json',
    'API-SECRET': nightscoutApiKey, // Include the API key in the default headers
  },
});

gem "fastlane", ">= 2.228.0"
gem "cocoapods", ">= 1.13", "!= 1.15.0", "!= 1.15.1"
gem "activesupport", ">= 6.1.7.5", "!= 7.1.0"
gem "concurrent-ruby", "< 1.3.4"

# Ruby 3.4+ no longer ships some stdlib components as default gems.
# Fastlane (and its dependencies) still expect them to be available, so we
# explicitly include the gems to keep the CI runner happy.
gem "abbrev"
gem "base64"
gem "kconv", path: "../vendor/kconv"
gem "logger"
gem "nkf"
gem "mutex_m"
gem "ostruct"
gem "reline"

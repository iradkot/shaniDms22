ENV['RCT_NEW_ARCH_ENABLED'] = '0'
# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Set the minimum iOS deployment target to 12.0
# Xcode 16 requires iOS 12.0 or newer; older deployment targets cause build failures
platform :ios, '12.0'
prepare_react_native_project!

# Force static linking for all CocoaPods
# Dynamic frameworks can prevent certain React Native headers (like hermes/hermes.h)
# from being discoverable at build time. Setting linkage to :static avoids these
# issues and is recommended when using React Native with many pods.
linkage = :static
Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
use_frameworks! :linkage => linkage

target 'shaniDms22' do
  config = use_native_modules!

  # Explicitly disable Hermes for iOS. When Hermes is enabled but not fully
  # configured, the iOS build may fail with missing header errors such as
  # 'hermes/hermes.h'. Disabling Hermes falls back to the JSC engine.
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => false,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
  end
end
